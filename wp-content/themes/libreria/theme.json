{
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "background",
          "color": "#F9F3EE",
          "name": "Background Color"
        },
        {
          "slug": "base",
          "color": "#2C1810",
          "name": "Base Color"
        },
        {
          "slug": "accent",
          "color": "#D03737",
          "name": "Accent Color"
        }
      ]
    },
    "typography": {
      "dropCap": false,
      "fontFamilies": [
        {
          "name": "System",
          "slug": "system",
          "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
        },
        {
          "fontFamily": "\"Ubuntu\", sans-serif",
          "name": "Ubuntu",
          "slug": "font-main"
        },
        {
          "fontFamily": "\"Libre Baskerville\", sans-serif",
          "name": "Libre Baskerville",
          "slug": "font-heading"
        }
      ],
      "fontSizes": [
        {
          "size": "1.4rem",
          "slug": "small",
          "name": "Small"
        },
        {
          "size": "1.6rem",
          "slug": "normal",
          "name": "Normal"
        },
        {
          "size": "1.8rem",
          "slug": "medium",
          "name": "Medium"
        },
        {
          "size": "2rem",
          "slug": "large",
          "name": "Large"
        },
        {
          "size": "2.4rem",
          "slug": "x-large",
          "name": "Extra Large"
        },
        {
          "size": "3.2rem",
          "slug": "xx-large",
          "name": "Extra Extra Large"
        }
      ]
    },
    "custom": {
      "lineHeight": {
        "heading": 1.3,
        "body": 1.5,
        "paragraph": 1.7
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--base)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--font-heading)",
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "lineHeight": "var(--wp--custom--line-height--heading)",
          "fontWeight": "400"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--font-heading)",
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "lineHeight": "var(--wp--custom--line-height--heading)",
          "fontWeight": "400"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--font-heading)",
          "fontSize": "var(--wp--preset--font-size--large)",
          "lineHeight": "var(--wp--custom--line-height--heading)",
          "fontWeight": "400"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--font-heading)",
          "fontSize": "var(--wp--preset--font-size--medium)",
          "lineHeight": "var(--wp--custom--line-height--heading)",
          "fontWeight": "400"
        }
      },
      "h5": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--font-heading)",
          "fontSize": "var(--wp--preset--font-size--normal)",
          "lineHeight": "var(--wp--custom--line-height--heading)",
          "fontWeight": "400"
        }
      },
      "h6": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--font-heading)",
          "fontSize": "var(--wp--preset--font-size--small)",
          "lineHeight": "var(--wp--custom--line-height--heading)",
          "fontWeight": "400"
        }
      }
    }
  }
}
